<!-- views/error.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Error</title>
    <link rel="stylesheet" type="text/css" href="stylesheets/styles.css">
</head>
<body>
    <h1>Error</h1>
    <% if (error.status === 404) { %>
        <p>Page not found</p>
    <% } else { %>
        <p><%= message %></p>
        <p><%= error.status || 'Internal Server Error' %></p>
        <pre><%= error.stack %></pre>
    <% } %>
</body>
</html>

